# Copy this file to .env.local during local development and fill in values.
# IMPORTANT: Do NOT commit .env.local with real secrets. Use GitHub Secrets for CI/production.

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_public_anon_key_here

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Paystack Configuration
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=<REPLACE_WITH_PAYSTACK_PUBLIC_KEY>
PAYSTACK_SECRET_KEY=<REPLACE_WITH_PAYSTACK_SECRET_KEY>
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# Next.js / NextAuth
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3001

# Local dev helper: allow listed emails to sign in as admin without modifying Supabase
# Only effective in development because requireAdmin guards prevent use in production.
DEV_ADMIN_BYPASS=false
ADMIN_EMAILS=you@example.com

# Cloudinary (optional)
NEXT_PUBLIC_CLOUDINARY_URL=https://api.cloudinary.com/v1_1/your_cloud_name/image/upload
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Notes:
# - Add real production secrets as GitHub repository secrets and reference them in CI and in
#   your deployment environment (Vercel, Fly, etc.).