# Local environment example for development and scripts
# Copy this to .env.local and fill in real values (do NOT commit your .env.local).

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-a-secure-random-string

# Supabase client (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase admin/service role - used only by scripts (do NOT commit)
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-key-here

# Admin test account for get-admin-cookie.js
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=correct-horse-battery-staple

# Optional overrides for the helper scripts
BASE_URL=http://localhost:3000
PROTECTED_PATH=/api/debug/session

# Paystack (placeholder values)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxx
PAYSTACK_SECRET_KEY=sk_test_xxx

# Optional: SendGrid for transactional emails (if absent, fallback notify is used)
SENDGRID_API_KEY=SG.xxxxxxxx
SENDER_EMAIL=no-reply@yourdomain.com
OWNER_EMAIL=owner@yourdomain.com

# Dev-only fallback: enable this to allow sign-in locally without modifying Supabase
# DEV_ADMIN_BYPASS=true
# ADMIN_EMAILS=info.laserstarglobal@gmail.com,other@you.com
