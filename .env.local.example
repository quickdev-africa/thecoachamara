# Copy this file to `.env.local` and fill with your real secrets. Do NOT commit the real `.env.local` file.

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=REDACTED_ANON_KEY

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=REDACTED_SERVICE_ROLE_KEY

# Paystack Configuration
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxx
PAYSTACK_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# NextAuth Configuration
NEXTAUTH_SECRET=REDACTED_NEXTAUTH_SECRET
NEXTAUTH_URL=http://localhost:3000

# Local dev helper: only for local development.
# Remove or set to false in production.
DEV_ADMIN_BYPASS=false
ADMIN_EMAILS=your-admin@example.com

# Cloudinary
NEXT_PUBLIC_CLOUDINARY_URL=https://api.cloudinary.com/v1_1/your-cloud-name/image/upload
CLOUDINARY_API_KEY=REDACTED_CLOUDINARY_KEY
CLOUDINARY_API_SECRET=REDACTED_CLOUDINARY_SECRET

# Notes:
# - Never commit your real .env.local. This repo's .gitignore already ignores .env.local.
# - If secrets were ever committed, rotate them immediately and consider a history purge (git filter-repo or BFG).
# - For CI/deployments, use your platform's secret manager (Vercel/Netlify/GHA Secrets) rather than checking secrets into the repo.
# DEV_ADMIN_BYPASS=true
